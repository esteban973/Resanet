//--------------------------AFFICHAGE MESSAGE ERREUR ----------------------
// fonction d'affichage d'alerte
function alerte(message){
    $('#dialogAlerte').empty();
    $('#dialogAlerte').append('<p>'+message+'</p>');
    $('#dialogAlerte').dialog({
                            modal:true,
                            buttons: {
				Ok: function() {
					$( this ).dialog( "close" );
				}}
			});

